{% extends 'base.html.twig' %}

{% block title %}Hello StatsController!{% endblock %}



{% block body %}



    <div class="stats single">
        <div class="container">
            <div class="absolute-box">
                <h1 class="title">{{ dep.lib_dep }}</h1>
                <h2 class="sub-title">Statistiques :</h2>
            </div>

            <div class="stats-wp">
                <canvas id="myChart-bis"></canvas>
            </div>

            <div class="back-home">
                <a href="{{ path('main') }}" class="btn btn-primary"><- Retourner sur l'accueil</a>
            </div>
        </div>
    </div>
    </div>

{% endblock %}

{% block javascripts_end %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.2/dist/chart.min.js"></script>
    <script>

        const ctxx = document.getElementById('myChart-bis').getContext('2d');
        const myChart = new Chart(ctxx, {
            type: 'doughnut',
            data: {
                labels: ['Patients hospitalisés', 'Patients en réanimations', 'Décès à l’hôpital'],
                datasets: [{

                    data: [{{ dep.hosp | raw }}, {{ dep.rea | raw }}, {{ dep.dchosp | raw }}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },

        });
    </script>
{% endblock %}
